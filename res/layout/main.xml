<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/composer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <com.cartalk.view.InOutRelativeLayout
            android:id="@+id/composer_buttons_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menubreakrules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="213dp"
                android:layout_marginLeft="16.0005dp"
                android:background="@drawable/breakrules"
                android:visibility="gone" />

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menupeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="202.9995dp"
                android:layout_marginLeft="78dp"
                android:background="@drawable/pepole"
                android:visibility="gone" />

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menunavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="174.999dp"
                android:layout_marginLeft="133.999999999999995dp"
                android:background="@drawable/navigation"
                android:visibility="gone" />

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menuerrorcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="130.999999999999995dp"
                android:layout_marginLeft="178.00000000000005dp"
                android:background="@drawable/errorcheck"
                android:visibility="gone" />

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menusetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="75dp"
                android:layout_marginLeft="205.99999999999995dp"
                android:background="@drawable/setting"
                android:visibility="gone" />

            <com.cartalk.view.InOutImageButton
                android:id="@+id/menurealtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="13.0000000000000005dp"
                android:layout_marginLeft="216dp"
                android:background="@drawable/menurealtime"
                android:visibility="gone" />
        </com.cartalk.view.InOutRelativeLayout>

        <com.cartalk.view.InOutRelativeLayout
            android:id="@+id/composer_buttons_show_hide_button"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/maindial" >

        </com.cartalk.view.InOutRelativeLayout>
    </RelativeLayout>

</LinearLayout>